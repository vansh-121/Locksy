{
  "manifest_version": 3,
  "name": "Secure Tab Extension",
  "version": "5.0",
  "description": "Ultra-secure tab protection with INSTANT 1ms re-lock, DevTools blocking, and multi-layer protection preventing any bypass attempts.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "notifications",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}